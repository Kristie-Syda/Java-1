<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:weightSum="1"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/mainSpin"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></Spinner>


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_above="@+id/detailGodName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="133dp"
        android:layout_height="50dp"
        android:id="@+id/detailName"
        android:textColor="#000000"
        android:textSize="24dp"
        android:layout_above="@+id/detailGodName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView" />

    <TextView
        android:layout_width="99dp"
        android:layout_height="47dp"
        android:id="@+id/detailGodName"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_above="@+id/detailGodDesc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="139dp"
        android:layout_height="50dp"
        android:id="@+id/detailGodDesc"
        android:textColor="#000000"
        android:textSize="16dp"
        android:layout_above="@+id/powerText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/powerText"
        android:layout_alignEnd="@+id/powerText" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/powerText"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
